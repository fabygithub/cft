/* no exista la tabla contactos*/

CREATE TABLE contactos
    (
    IdContacto int null,
    nombre VARCHAR(20),
    apellido VARCHAR(40),
    correo VARCHAR(20),
    PRIMARY KEY (IdContacto));
    
/* se insertan 3 contactos
