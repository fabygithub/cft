create database tienda;            
Use tienda;
CREATE TABLE tipoProducto(
	idTipoProducto int PRIMARY KEY AUTO_INCREMENT not null,
	Nombre varchar(20));
  
insert into tipoProducto values 
(null, 'teclado');

select * from tipoproducto;

Alter table tipoproducto 
modify nombre varchar(30);

use tienda;
Update tipoprodructo set nombre = 'teclado2' 
where idTipoProducto = "1";

delete from tipoproducto 
where idTipoProducto = 1;

drop table tipoproducto;

  

CREATE TABLE producto(
	idProducto int PRIMARY KEY AUTO_INCREMENT NOT NULL,
		idTipoProducto int not null,
		codigo varchar(20) not null,
        descripcion varchar(50),
        cantidad int,
        precio int,
        foreign key(idTipoProducto) references tipoProducto(idTipoProducto));
	
	
	
insert into producto values
		(1,1,'tecl','teclado negro',100,2000);
		
		
select * from producto;	

Alter table producto 
modify codigo varchar(30);

Update producto set nombre = 'teclado22' 
where idProducto = "1";





